<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.asela.person">

    <class name="Person" table="PERSON_2">
        <id name="id" column="PERSON_ID">
            <generator class="native"/>
        </id>
        <property name="firstName" type="string" column="f_name"/>
	    <property name="lastName" type="string" column="l_name"/>
	    <property name="age" type="integer" column="age"/>
	    <property name="gender" type="character" column="gender"/>
	</class>

</hibernate-mapping>